<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_report_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.imperialsoupgmail.tesseractexample.ReportViewActivity"
    tools:showIn="@layout/activity_report_view">

    <EditText
        android:id="@+id/lblMonthTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/lblMonth"
        android:layout_below="@+id/lblMonth"
        android:layout_marginTop="38dp"
        android:editable="false"
        android:ems="10"
        android:inputType="text"
        android:text="Month Total" />

    <EditText
        android:id="@+id/lblMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="41dp"
        android:editable="false"
        android:ems="10"
        android:inputType="textPersonName"
        android:minWidth="20dp"
        android:text="Month" />

    <EditText
        android:id="@+id/txtMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lblMonth"
        android:layout_alignBottom="@+id/lblMonth"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="textEnd" />

    <EditText
        android:id="@+id/txtMonthTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lblMonthTotal"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="textEnd" />

</RelativeLayout>
